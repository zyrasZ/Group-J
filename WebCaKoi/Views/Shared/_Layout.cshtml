                                <a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
                            </div>
                            <div class="header__top__right__language">
                                <img src="~/img/language.png" alt="">
                                <div>English</div>
                            </div>
                            <div class="header__top__right__auth">
                                <div class="header__top__right__auth">
                                @if (!string.IsNullOrEmpty(TKnhanvien))
                                {
                                    
                                    <a href="~/NhanVien"><i class="fa fa-user"></i> @TKnhanvien</a>
                                    <a class="dropdown-item" asp-controller="NhanVien" asp-action="LogoutNhanVien" class="logout-link"><i class="fa fa-user"></i> Logout</a>
                                }
                                else if (!string.IsNullOrEmpty(tenTaiKhoan))
                                {
                                    <a href="~/Home"><i class="fa fa-user"></i> @tenTaiKhoan</a>
