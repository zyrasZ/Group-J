            </div>
            <div class="header__top__right__auth">
                @if (!string.IsNullOrEmpty(TKnhanvien))
                {
                    <p>Xin chào, @TKnhanvien!</p>
                }
                else
                {
                    <a href="@Url.Action("LoginNhanVien", "NhanVien")">Login</a>
                }
                @if (!string.IsNullOrEmpty(tenTaiKhoan))
                {
                    <p>Xin chào, @tenTaiKhoan!</p>
                }
                else
                {
                    <a href="@Url.Action("Login", "Home")">Login</a>
                }
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li class="active"><a href="~/Home">Home</a></li>
                <li><a href="~/Shop" >Shop</a></li>
                <li><h4>Pages</h4>
                    <ul class="header__menu__dropdown">
                        <li><a href="~/Page/ShopDetail">Shop Details</a></li>
