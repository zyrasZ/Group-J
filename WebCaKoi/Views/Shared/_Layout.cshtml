                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                                <li><a href="~/Page/Detail"><i class="fa fa-heart"></i></a></li>

                        </ul>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
